alias hyper ctrl;shift;alt;cmd

#right half
bind right:ctrl;alt;cmd  move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

#left half
bind left:ctrl;alt;cmd   move screenOriginX;screenOriginY screenSizeX/2;screenSizeY

#top half
bind up:ctrl;alt;cmd   move screenOriginX;screenOriginY screenSizeX;screenSizeY/2

#bottom half
bind down:ctrl;alt;cmd   move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2

 

#fullscreen
bind up:ctrl;shift;alt;cmd   move screenOriginX;screenOriginY screenSizeX;screenSizeY 
